@model CreateServiceVM;
@{
    ViewData["Title"] = "Create";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <form class="forms-sample" method="post" action="create">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span class="text text-danger" asp-validation-for="Name"></span>
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span class="text text-danger" asp-validation-for="Description"></span>
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" placeholder="Price">
                    <span class="text text-danger" asp-validation-for="Price"></span>
                    <label asp-for="Photos"></label>
                    <input asp-for="Photos" class="form-control" placeholder="Photos">
                    <span class="text text-danger" asp-validation-for="Photos"></span>

                    <label asp-for="Photos"></label>
                    <div>
                        <select asp-for="CategoryId">
                            @foreach (Category category in Model.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                       
                    </div>
                    <span class="text text-danger" asp-validation-for="Photos"></span>
